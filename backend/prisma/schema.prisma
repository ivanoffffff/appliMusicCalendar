generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  firstName String?
  lastName  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  favorites                UserFavorite[]
  spotifyToken             SpotifyToken?
  notificationPreferences  NotificationPreferences?
  notificationLogs         NotificationLog[]

  @@map("users")
}

model Artist {
  id          String   @id @default(cuid())
  spotifyId   String?  @unique
  deezerId    String?  @unique
  name        String
  genres      String   // JSON string
  imageUrl    String?
  
  popularity  Int?     @default(0)
  followers   Int?     @default(0)
  lastSyncAt  DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  favorites UserFavorite[]
  releases  Release[]

  @@map("artists")
}

model UserFavorite {
  id       String @id @default(cuid())
  userId   String
  artistId String
  category String @default("default")
  addedAt  DateTime @default(now())

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  artist Artist @relation(fields: [artistId], references: [id], onDelete: Cascade)

  @@unique([userId, artistId])
  @@map("user_favorites")
}

model Release {
  id          String      @id @default(cuid())
  spotifyId   String?     @unique
  deezerId    String?     @unique
  name        String
  releaseType ReleaseType
  releaseDate DateTime
  imageUrl    String?
  spotifyUrl  String?
  deezerUrl   String?
  trackCount  Int?
  duration    Int?
  isExplicit  Boolean     @default(false)
  popularity  Int?
  artistId    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  artist            Artist            @relation(fields: [artistId], references: [id], onDelete: Cascade)
  notificationLogs  NotificationLog[]

  @@map("releases")
}

model SpotifyToken {
  id           String    @id @default(cuid())
  userId       String    @unique
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  scope        String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("spotify_tokens")
}

// ðŸ†• NOUVEAU MODÃˆLE : PrÃ©fÃ©rences de notification
model NotificationPreferences {
  id                  String   @id @default(cuid())
  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  emailNotifications  Boolean  @default(true)
  notificationTypes   String   @default("{\"newAlbum\":true,\"newSingle\":true,\"newCompilation\":true}")
  frequency           String   @default("immediate") // immediate, daily, weekly
  
  // ðŸ†• Option pour activer/dÃ©sactiver le rÃ©capitulatif hebdomadaire
  weeklySummary       Boolean  @default(true)
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("notification_preferences")
}

// ðŸ†• NOUVEAU MODÃˆLE : Logs de notification
model NotificationLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  releaseId   String?
  release     Release? @relation(fields: [releaseId], references: [id], onDelete: SetNull)
  type        String   // email, push, weekly_summary, etc.
  status      String   // sent, failed, pending
  sentAt      DateTime @default(now())
  
  // ðŸ†• MÃ©tadonnÃ©es pour stocker des infos supplÃ©mentaires (ex: nombre de sorties)
  metadata    String?  @default("{}")

  @@index([userId])
  @@index([sentAt])
  @@map("notification_logs")
}

enum ReleaseType {
  ALBUM
  SINGLE
  EP
}